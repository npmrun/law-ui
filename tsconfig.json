{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "preserve",
        "types": ["ant-design-vue/typings/global"],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@law-ui/*": ["./packages/*"]
        }
    },
    "include": ["./packages"],
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        },
        {
            "path": "./tsconfig.play.json"
        }
    ]
}
